html
  head
    meta(name='viewport' content="width=device-width, initial-scale=1.0")
    title Admin Albums
    script(src='/javascripts/jquery-1.12.4.min.js', type='text/javascript')
    script(src='/javascripts/main.js', type='text/javascript')
    script(src='/javascripts/admin-albumdetail.js', type='text/javascript')
    link(rel='stylesheet', type='text/css', href='/stylesheets/reset.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    style(id='tempstyle')
  body
    // Body
    #background-color.background-color
      #body-container.container.padding-top
        // Header
        .location  
          location#location
          a#logout(href='/admin/logout') Logout
          span#username= user
        .clear-both
        // Main
        .container.padding-standard
          // Border with title
          fieldset.main-container.min-height
            legend.name-main-container-admin-albumlist Photos
            // title
            // List of album
            .margin-standard
              #add-photo-tool(data-show='1')
                | Add photo
              #add-photo-form(hidden='')
                input#file.right.add-photo(type='file', name='photo', hidden='' required)
                #fake-choose-file Choose file
                input#add-photo.left(type='button', name='submit', value='Submit')
                #file-info.right
                .clear-both
              #show-all-album.margin-standard.container
              .clear-both
              .container
                a#show-more-photo.button-classic.margin-down.col-40.left-30(href='javascript:void(0)')
                  | Show more photos
            // End list of album
        // End border with title
